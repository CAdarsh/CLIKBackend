<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,700;0,800;1,600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./styles.css" />
    <link rel="stylesheet" href="./register.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/header') %>
    <main>
      <script>
        let token = sessionStorage.getItem("adminToken");
        if(!token){
          window.location = '/admin/login';
        }
      </script>
      <h1 class="main-heading">Create Account</h1>
      <form>
        <div class="inps">
          <input
            name="email"
            class="text-inp text-inp-email"
            type="email"
            placeholder="Email"
          />
          <input
            name="buisnessName"
            type="text"
            class="text-inp text-inp-bname"
            placeholder="Company"
          />
          <input
            name="name"
            type="text"
            class="text-inp text-inp-name"
            placeholder="Full Name"
          />
          <input
            name="phone"
            type="text"
            class="text-inp-phone"
            placeholder="Phone Number"
          />
          <input
            name="password"
            type="password"
            class="text-inp-password"
            placeholder="Password"
          />
          <input
            name="cpassword"
            type="password"
            class="text-inp"
            placeholder="Confirm Password"
          />
          <input
            name="slug"
            type="text"
            class="text-inp-route"
            placeholder="Enter the Route"
          />
          <div class="slug-message">
            Ex: member.clikindia.co.in/member/route_name
          </div>
          <% if(isError) {%>
          <div class="error-message">
            <%= error %>
          </div>
          <% } %>
        </div>
        <input class="subm" type="submit" value="Register" />
        <div class="nom">
          <p>Already have an account?</p>
          <a href="/index.html">Sign In</a>
        </div>
      </form>
    </main>
    <%- include('../partials/footer') %>
    <script src="./register.js"></script>
    <!-- <script src="./index.js"></script> -->
  </body>
</html>
