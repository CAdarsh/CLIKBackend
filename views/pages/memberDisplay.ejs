    <script>
      function ChangeData(data) {
        if (data.status == 200) {
          let { content, bEmail, bPhone, website, title, location,image } = data.data;
          document.querySelector(".info-name").innerHTML = title;
        // document.querySelector(".slug").value = slug;
        // document.querySelector(".slug").setAttribute("data-dslug", slug);
        document.querySelector(".location").innerHTML = location;
        document.querySelector(".mail").href = `mailto:${bEmail}`;
        document.querySelector(".mail").innerHTML = `${bEmail}`;
        document.querySelector(".website").innerHTML = `${website}`;
        document.querySelector(".phone").innerHTML = `${bPhone}`;
        document.querySelector(".website").href = website;
        document.querySelector(".phone").href = `tel:+${bPhone}`;
        document.querySelector(".about-text").innerHTML = content;
        document.querySelector(".contact-address").innerHTML = location;
        // document.querySelector(".company-logo-img").src = image;
        
        } else {
          window.location = "/404";
        }
      }

      var obj = {
        slug: "<%=slug%>",
      };

      var requestOptions = {
        method: "POST",
        body: JSON.stringify(obj),
        headers: {
          "Content-Type": "application/json",
        },
      };

      fetch("/page/details", requestOptions)
        .then((response) => response.json())
        .then((result) => {
          // document.querySelector(".loader").style.display = "none";
          ChangeData(result);
        })
        .catch((error) => console.log("error", error));
    </script>

