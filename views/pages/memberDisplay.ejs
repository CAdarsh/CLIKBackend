<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,700;0,800;1,600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./styles.css" />
    <link rel="stylesheet" href="./dashboard.css" />
    <link rel="stylesheet" href="./member.css" />
    <title>Document</title>
  </head>
  <body>
    <style>
      .none{
        display: none;
      }
    </style>
    <script>
      function ChangeData(data) {
        if (data.status == 200) {
          let { content, bEmail, bPhone, website, title, location,image,products } = data.data;
          document.querySelector(".info-name").innerHTML = title;
        // document.querySelector(".slug").value = slug;
        // document.querySelector(".slug").setAttribute("data-dslug", slug);
        document.querySelector(".location").innerHTML = `<img class="company-loc-img" src="./images/pin.svg" alt="pin">${location}`;
        document.querySelector(".mail").href = `mailto:${bEmail}`;
        document.querySelector(".mail").innerHTML = `<img class="contact-info-img" src="./images/email.svg" alt="phone">${bEmail}`;
        document.querySelector(".website").innerHTML = `<img class="contact-info-img" src="./images/internet.svg" alt="phone">${website}`;
        document.querySelector(".phone").innerHTML = `<img class="contact-info-img" src="./images/phone.svg" alt="phone">${bPhone}`;
        document.querySelector(".website").href = website;
        document.querySelector(".phone").href = `tel:+${bPhone}`;
        document.querySelector(".about-text").innerHTML = content;
        document.querySelector(".contact-address").innerHTML = location;
        document.querySelector(".company-logo-img").src = `${image.split('\\')[1]}/${image.split('\\')[2]}`;
        
        // let a = products.reduce((acc,data,index)=>{
        //   acc += `<div class="product">
        //   <img class="product-img opac" src="${data.image}" alt="product">
        //   <div class="hnp opac">
        //     <h3 class="product-heading">${data.name}</h3>
        //     <p class="product-price">&#8377; ${data.price} </p>
        //   </div>
        //   <img src="/images/delete.svg" alt="delete" class="delete-svg"/>
        // </div>  `;
        // console.log(data.name)
        // },' ');  
        // console.log(a);
        if(products.length!==0){
          products.forEach((data)=>{
            let a=  `<div class="product">
              <img class="product-img " src="${data.image}" alt="product">
              <div class="hnp ">
                <h3 class="product-heading">${data.name}</h3>
                <p class="product-price">${!!data.price?'&#8377;':''} ${(!data.price?'Contact Us':data.price)} </p>
                </div>
                </div> `
                document.querySelector('.products').innerHTML += a;
              })
            }else{
              document.querySelector('.products').innerHTML +=`
              <div class="noProducts">
                <img src="/images/noProducts.svg" alt="np" class="noProd-img"/>
                <h3 class="np-heading">No Products Found</h3>
                <p class="np-text">*The company has not listed any products on the website</p>
              </div>
              `;

            }

        } else {
          window.location = "/404";
        }
      }

      var obj = {
        slug: "<%=slug%>",
      };

      var requestOptions = {
        method: "POST",
        body: JSON.stringify(obj),
        headers: {
          "Content-Type": "application/json",
        },
      };

      fetch("/page/details", requestOptions)
        .then((response) => response.json())
        .then((result) => {
          document.querySelector(".spinner").style.display = "none";
          ChangeData(result);
        })
        .catch((error) => console.log("error", error));
    </script>

    <%- include('../partials/header') %>
    <div class="new-entry-modal-cont">
      <div class="new-entry-modal">
        <div class="new-entry-cross">x</div>
        <h2 class="new-entry-heading">New Entry</h2>
        <form name="addProduct" onsubmit="slugUnique(event,this)" class="new-entry-form">
          <input type="file" name="file" id="file" class="inputfile" accept=".jpeg,.jpg,.png,.svg" required/>
          <label for="file"><svg width="65" height="44" viewBox="0 0 65 44" fill="none" xmlns="http://www.w3.org/2000/svg" class="upload-svg">
            <path d="M52.4062 16.61C50.5646 7.1225 42.3583 0 32.5 0C24.6729 0 17.875 4.51 14.4896 11.11C6.3375 11.99 0 19.0025 0 27.5C0 36.6025 7.28542 44 16.25 44H51.4583C58.9333 44 65 37.84 65 30.25C65 22.99 59.4479 17.105 52.4062 16.61ZM37.9167 24.75V35.75H27.0833V24.75H18.9583L32.5 11L46.0417 24.75H37.9167Z" fill="white"/>
            </svg> Choose Product Image</label>
          <input type="text" name="token" class="none">  
          <input type="text" class="pn" placeholder="Product Name" required/> 
          <input type="text" class="pp" placeholder="Product Price (optional)" />
          <input type="submit" class="new-entry-submit" value="Add" />
        </form>
      </div>
    </div>
    <main>
      <div class="inner-nav">
          <div class="company-logo"><img src="./images/ph.png" alt="logo" id="img-main" class="company-logo-img"></div>
          <div class="company-info"> 
              <div class="company-name-loc">
